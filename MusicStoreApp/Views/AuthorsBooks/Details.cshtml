@{
}
@model MusicStore.Domain.BookDbIntegration.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mx-auto text-white">
    <div class="col">
        <img src="@Model.Image" style="border-radius: 15px" alt="...">
    </div>
    <div class="col">
        <h1 class="display-5 mtext-white">Details for Book</h1>
        <hr class="border-3 rounded-3" />
        <dl class="row">
            <h2> @Html.DisplayFor(model => model.Title)</h2> 
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>
            <div class="my-3">
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </dl>
    </div>


</div>
