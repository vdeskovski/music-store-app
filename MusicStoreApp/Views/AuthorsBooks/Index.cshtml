@{
}
@model List<MusicStore.Domain.BookDbIntegration.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-5">
    <div class="d-flex flex-row justify-content-between mt-5 mb-5 text-white">
        <h1 class="display-4">Browse All Books</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card album-card universe-card shadow-sm h-100">
                    <img src="@item.Image" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-unstyled">
                            <li><strong>By:</strong> @item.Author.Name</li>
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-secondary btn-sm stretched-link">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="row text-white fw-bold">
            <div class="col-12">
                <p class="text-center">No Books found.</p>
            </div>
        </div>
    }
</div>
